@model RAM.Controllers.ViewModels.HomeView

@{
    ViewBag.Title = "Modesto Power | " + Model.SelectedPage.title;
}
<section id="promo" class="historyheader parallax">
    <div class="container">
        <h5>push yourself to</h5>
        <h1>the next level</h1>
    </div>
</section>
<section class="main-slider no-bottom-margin has-pagination has-navigation stop-on-hover" data-interval="10000">
    <div class="slider-item-list">
        @foreach (var img in Model.SelectedPage.bannerimage)
        {
            <div class="slider-item" data-label="Intro">
				<!-- SLIDE 1 BACKGROUND IMAGE : begin -->
				<img class="slider-item-bg" src="@img" alt="Modesto Power Danny Schreiber">
				<!-- SLIDE 1 BACKGROUND IMAGE : end -->

				<div class="slider-item-inner">
					<div class="slider-item-content valign-bottom">
						<div class="wrapper">

							<!-- SLIDE 1 CONTENT : begin -->
							@*<div class="row">
								<div class="col-md-7">
									<h2 data-inview-animation="fadeInDown">For The Creators</h2>
									<p class="big" data-inview-animation="fadeInUp"><em>Doesn't matter if you are <strong>illustrator</strong>, <strong>photographer</strong> or <strong>writer</strong>,
									ARCITE will be your loyal companion and will present your hard work to the public in style.</em></p>
								</div>
							</div>*@
							<!-- SLIDE 1 CONTENT : end -->

						</div>
					</div>
				</div>
			</div>
        }
    </div>
</section>

<section id="aboutcontent">
    <br />
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-6 col-sm-12 col-xs-12 about-inner">
                <h2>@Model.SelectedPage.title</h2>
                <h3>@Model.SelectedPage.headertext</h3>
                @Html.Raw(Model.SelectedPage.maincontent)
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                <div class="visual">
                    <img class="about-mockup thumbnail" src="/images/basic/IMG_0535.jpg" alt="/">
                </div>
            </div>
        </div>
    </div>
</section>

<script>

    (function () {
        setTimeout(function () {
            $('#sticktop-sticky-wrapper').hide();
            $('#internalnav').show();
            $('#nav-instructors').addClass('active');
        }, 500);

    })();
</script>

