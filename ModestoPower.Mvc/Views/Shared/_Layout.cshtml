<!DOCTYPE html>
<html ng-app>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Modesto Power</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body data-spy="scroll" data-target="#sticktop" data-offset="70">
    <!-- Preloader -->
    <div id="preloader">
        <div id="status">
            <div class="spinner">
                <div class="cube1"></div>
                <div class="cube2"></div>
            </div>
        </div>
    </div>




    <!--=================================
     Home
     =================================-->
    <section id="home" class="video-banner">

        <video class="video-BG">
            <source type="video/mp4" src="../video/mp1.mp4" />
        </video>

        <div class="overlay"></div>
        <div class="video-content visible-lg visible-md">
            <div class="container">
                <!-- <img class="logo" src="assets/img/basic/logo.png" alt=""> -->
                <div class="text-fadder flexslider">
                    <ul class="slides">
                        <li>
                            <h5>the ultimate</h5>
                            <h1>Training Facility</h1>
                        </li>
                        <li>
                            <h5>the Limitless</h5>
                            <h1>Training experience</h1>
                        </li>
                        <li>
                            <h5>feel the difference</h5>
                            <h1>Modesto Power</h1>
                        </li>
                    </ul>
                </div>
                <ul class="home-nav">
                    <li><a href="#about">About</a></li>
                    <li><a href="#services">Programs</a></li>
                    <li><a href="#team">Schedule</a></li>
                    <li><a href="#profile">Instructors</a></li>
                    <li><a href="#portfolio">Blog</a></li>
                    <li><a href="#features">Tutorials</a></li>
                    <li><a href="#hire-us">Gallery</a></li>
                    <li><a href="#getintouch">Contact</a></li>
                </ul>
                <a class="btn" href="#">learn more</a>
            </div>
        </div>
        <a class="scroller" href="#about"></a>
    </section>

    <!--=================================
    header
    =================================-->
    <header id="sticktop">
        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                    <a class="navbar-brand" href="/"><img src="../images/logo.png" alt="logo" /></a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="#home">Home</a></li>
                        <li><a href="#about">About</a></li>
                        <li><a href="#team">Programs</a></li>
                        <li><a href="#profile">Schedule</a></li>
                        <li><a href="#portfolio">Instructors</a></li>
                        <li><a href="#features">Blog</a></li>
                        <li><a href="#hire-us">Tutorials</a></li>
                        <li><a href="#getintouch">Gallery</a></li>
                        <li><a href="#getintouch">Contact</a></li>

                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </nav>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <h5> <a href="#">© Modesto Power.</a> All Rights Reserved</h5>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-right">
                        <h6>Site by: <a href="http://www.ravenartmedia.com">Raven Art Media</a></h6>
                    </div>
                </div>


            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/mp")
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
    @RenderSection("scripts", required: false)
    <script>
        $(window).load(function () {
            $('#status').fadeOut(); // will first fade out the loading animation
            $('#preloader').delay(250).fadeOut('slow'); // will fade out the white DIV that covers
            $('.spinner').fadeOut();

        });
    </script>
</body>
</html>
