@model RAM.Controllers.ViewModels.HomeView

@{
    ViewBag.Title = "Modesto Power | Blog";
}
<section id="promo" class="historyheader parallax">
    <div class="container">
        <h5>Here is some statement about</h5>
        <h1>The Schedule</h1>
    </div>
</section>
<section id="aboutcontent">
    <br />
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 about-inner">
                <h1>Our Roll</h1>
                @foreach (var post in Model.Posts)
                {
                    <article class="blog-post">
                        <header class="post-header">
                            <h2 class="post-title"><a href="/blog/@post.title.Replace(" ", "-")">@post.title</a> </h2>
                            <ul class="post-info">
                                <li><i class="glyphicon glyphicon-time"></i> @post.dateposted.ToShortDateString()</li>
                                <li><i class="glyphicon glyphicon-user"></i> @post.enteredby</li>
                                <li>
                                    <i class="glyphicon glyphicon-folder-open"></i>
                                    @foreach (var t in post.tags)
                                    {
                                        if (post.tags.IndexOf(t) == post.tags.Count -1)
                                        {
                                            <a href="#"> @t</a>
                                        }
                                        else
                                        {
                                            <a href="#"> @t, </a>
                                        }
                                    }
                                </li>

                            </ul>


                        </header>
                        <div class="post-content">
                            <p class="post-featured-image">
                                <a href="/blog/@post.category.Replace(" ", "-")/@post.title.Replace(" ", "-")"><img class="img-responsive" src="@post.imagepath" alt="@post.title"></a>
                            </p>
                            <p>@post.postpreview</p>
                        </div>
                        <!-- POST CONTENT : end -->
                        <!-- POST FOOTER : begin -->
                        <footer class="post-footer">
                            <p><button href="/blog/@post.category.Replace(" ", "-")/@post.title.Replace(" ", "-")" class="btn btn-danger">Read More</button></p>
                        </footer>

                    </article>
                }
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                @Html.Action("Sidebar", "Blog")
            </div>
        </div>
    </div>
</section>





<script>

    (function () {
        setTimeout(function () {
            $('#sticktop-sticky-wrapper').hide();
            $('#internalnav').show();
            $('#nav-blog').addClass('active');
        }, 500);

    })();
</script>