@model RAM.Admin.Controllers.ViewModels.HomeView


<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th class="col-sm-5">
                Title
            </th>
            <th class="col-sm-1">
                Category
            </th>
            <th class="col-sm-1">
                Active
            </th>
            <th class="col-sm-1">
                Date
            </th>
            <th class="col-sm-2">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model.Blogs)
        {
            <tr>
                <td>
                    <span id="title_@blog.Id.ToString()">
                        @blog.title
                    </span>
                </td>
                <td>
                    <span id="category_@blog.Id.ToString()">
                        @blog.category
                    </span>
                </td>
                <td>
                    <span id="status_@blog.Id.ToString()">
                        @(blog.isactive == true ? "Active" : "Inactive")
                    </span>
                </td>
                <td>
                    <span id="postdate_@blog.Id.ToString()">
                        @blog.dateposted.ToShortDateString()
                    </span>
                </td>
                <td style="text-align: right;">
                    <a id="blogEdit_@blog.Id.ToString()" href="/Blog/Post/@blog.Id.ToString()" class="btn btn-info" role="button" data-id="@blog.Id.ToString()" data-category="@blog.category">Edit</a>
                    <button class="deletePost btn btn-danger" data-id="@blog.Id.ToString()" type="button">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
