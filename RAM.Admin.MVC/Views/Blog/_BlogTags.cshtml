
@model RAM.Admin.Controllers.ViewModels.HomeView


<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th class="col-sm-1">
                Name
            </th>
            <th style="text-align: right;" class="col-sm-2" >
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model.Tags)
        {
            <tr>
                <td>
                    <span id="name_@tag.Id.ToString()">
                        @tag.name
                    </span>
                </td>
                <td style="text-align: right;">
                    <a id="blogTagsEdit_@tag.Id.ToString()" href="#tagModal" class="editTagsModal btn btn-info" role="button" data-toggle="modal" data-id="@tag.Id.ToString()">Edit</a>
                    <button class="deleteTag btn btn-danger" data-id="@tag.Id.ToString()" type="button">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>