@model RAM.Admin.Controllers.ViewModels.HomeView


<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Image
            </th>
            <th>
                Sub Text
            </th>
            <th style="text-align: right;">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    <span id="firstname_@user.Id">
                        @user.FirstName
                    </span>
                </td>
                <td>
                    <span id="lastname_@user.Id">
                        @user.LastName
                    </span>
                </td>
                <td>
                    <span id="email_@user.Id">
                        @user.Email
                    </span>
                </td>
                <td style="text-align: right;">
                    <a id="userEdit_@user.Id" href="#usersModal" class="editModal btn btn-info" role="button" data-toggle="modal" data-id="@user.Id">Edit</a>
                    <button class="deleteUser btn btn-danger" data-id="@user.Email" type="button">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>


