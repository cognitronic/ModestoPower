@model RAM.Admin.Controllers.ViewModels.HomeView
@{
    ViewBag.Title = "Schedule Management";
}
<div class="container">
    <div class="row">
        <h2 class="pull-left">Schedule Mangement</h2>
        <div class="pull-right" style="margin-top: 20px;">
            <a href="#scheduleModal" class="editModal btn btn-success" role="button" data-toggle="modal">New Class</a>
        </div>
    </div>
    <div class="row">
        <hr />
        <div id="scheduleList">
            @Html.Partial("_ScheduleList")
        </div>
    </div>
    <div id="scheduleModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 id="modalLabel">Add/Edit Class</h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <b>Instructor:</b><br />
                            <input id="modalInstructor" type="text" class="form-control" placeholder="Enter Instructors Name" /><br />
                            <b>Class:</b><br />
                            <input id="modalClass" type="text" class="form-control" placeholder="Enter Class Name" /><br />
                            <b>Description:</b><br />
                            <input id="modalDescription" type="text" class="form-control" placeholder="Enter Description" /><br />
                            <b>Day:</b><br />
                            <input id="modalDay" type="text" class="form-control" placeholder="Enter Day of the Week" /><br />
                            <input name="userID" type="hidden" id="hdnUserID" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn" data-dismiss="modal">Cancel</button>
                        <button id="submit-all" type="button" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {


        $(".editModal").on('click', function (e) {
            e.preventDefault();
            @*var banners = @Html.Raw(Json.Encode(Model.Banners));
            var banner = banners[$(this).data('id') - 1 ];*@
            $("#modalFirst").val($("#firstname_" + $(this).data('id')).text().trim());
            $("#modalLast").val($("#lastname_" + $(this).data('id')).text().trim());
            $("#modalEmail").val($("#email_" + $(this).data('id')).text().trim());
            $("#hdnUserID").val($(this).data('id'));
        });

        $(".deleteUser").on('click', function(e){
            e.preventDefault();
            if (!confirm("Do you want to delete")){
                return false;
            }
            $.ajax({
                url: '@System.Configuration.ConfigurationManager.AppSettings["BaseUrl"]' + '/Users/DeleteUser',
                type: 'POST',
                data: JSON.stringify({id: $(this).data('id')}),
                dataType: "json",
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    $("#usersModal").modal('hide');
                    $("#userList").html("");
                    $("#userList").load('@System.Configuration.ConfigurationManager.AppSettings["BaseUrl"]' + '/Users/UserList');
                    $('#userList').effect("highlight", { color: "#7fd658" }, 1000);
                },
                error: function (x, y, z) {
                    alert(x + '\n' + y + '\n' + z);
                }
            });
        });


        $("#submit-all").on('click', function (e) {
            e.preventDefault();
            var u = {
                FirstName: $("#modalFirst").val(),
                LastName: $("#modalLast").val(),
                Email: $("#modalEmail").val(),
                Password: $("#modalPassword").val(),
                PasswordAnswer: $("#hdnUserID").val()
            };
            console.log(JSON.stringify(u));
            $.ajax({
                url: '@System.Configuration.ConfigurationManager.AppSettings["BaseUrl"]' + '/Users/SaveUser',
                type: 'POST',
                data: JSON.stringify(u),
                dataType: "json",
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    $("#usersModal").modal('hide');
                    $("#userList").html("");
                    $("#userList").load('@System.Configuration.ConfigurationManager.AppSettings["BaseUrl"]' + '/Users/UserList');
                    $('#userList').effect("highlight", { color: "#7fd658" }, 1000);
                },
                error: function (x, y, z) {
                    alert(x + '\n' + y + '\n' + z);
                }
            });
        });



    });
</script>

