
@model RAM.Admin.Controllers.ViewModels.HomeView


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Image
            </th>
            <th>
                Description
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var program in Model.Programs)
        {
            <tr>
                <td>
                    <span id="name_@program.Id">
                        @program.name
                    </span>
                </td>
                <td>
                    <span>
                        <img src='@System.Configuration.ConfigurationManager.AppSettings["PublicSiteURL"]@program.imagepaths[0]' class="img-thumbnail" style="width: 300px; height: 200px;" />
                    </span>
                </td>
                <td>
                    <span id="description_@program.Id">
                        @program.description
                    </span>
                </td>
                <td>
                    <a id="programEdit_@program.Id" href="#programModal" class="editModal btn btn-info" role="button" data-toggle="modal" data-id="@program.Id">Edit</a>
                    <button class="deleteprogram btn btn-danger" data-id="@program.Id" type="button">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

