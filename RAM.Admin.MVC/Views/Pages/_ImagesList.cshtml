@if (Model.SelectedPage != null){
    <div class="panel-group" id="accordian">
    <div class="panel-group panel-info">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" href="#collapseOne">
                    <i class="glyphicon glyphicon-plus"></i>
                    Click To Manage Page Images
                </a>
            </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse">
            <div class="panel-body">
                <div class="jumbotron">
                    <div class="pull-right">
                        <a href="#pageModal" class=" editPageModal btn btn-success" data-id="@Model.SelectedPage.Id.ToString()" role="button" data-toggle="modal">Add Image</a>
                    </div>
                    <div>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th class="pull-right">
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var img in Model.SelectedPage.bannerimage)
                                {
                                    <tr>
                                        <td>
                                            <span>
                                                <img src='@System.Configuration.ConfigurationManager.AppSettings["PublicSiteURL"]@img' class="img-rounded" style="width: 150px; height: 100px;" />
                                            </span>
                                        </td>
                                        <td>
                                            <a href="" data-id="@Model.SelectedPage.Id" data-name="@img" class="deleteImage btn btn-danger pull-right" style="margin-left: 10px;">Delete</a>
                                            @*@if (!img.IsDefault)
                                                {
                                                    <a href="" data-projectID="@img.ProjectID" data-id="@img.ID" class="makeImageDefault btn btn-info pull-right">
                                                        Make Default
                                                    </a>
                                                }
                                                else
                                                {
                                                    <button disabled="true" class="makeImageDefault btn btn-default pull-right">
                                                        Default Image
                                                    </button>
                                                }*@
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
